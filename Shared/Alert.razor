@code {
    [Parameter] public string? Message { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
}

@if (!string.IsNullOrEmpty(Message))
{
    <div class="modal-overlay d-flex align-items-center fw-bold">
        <div class="alert-wrapper d-inline-block">
            <div class="alert alert-secondary p-0 m-0 sig-border" role="alert">
                <div class="container-fluid border border-2 border-white rounded">
                    <div class="row">
                        <div class="col-12 sig-bg text-light rounded-top border-0 border border-white border-2 border-bottom">
                            <p class="text-uppercase fs-6 m-2 pe-5">Invalid or Missing Input</p>
                        </div>
                    </div>
                    <div class="row d-flex align-items-center flex-nowrap m-1">
                        <div class="col text-start p-1">
                            <p class="m-0 text-muted">Add Vehicle | Add Customer</p>
                            <p class="m-0 sig-color">@Message</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 text-end">
                            <button @onclick="OnClose" class="btn-close p-0" aria-label="Close"></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
